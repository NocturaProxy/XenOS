{
  "compilerOptions": {
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "ESNext",
    "allowJs": true,
    "moduleResolution": "node"
  },
  "exclude": ["node_modules", "public/xen/**/*.d.ts", "public/xen/apps"],
  "include": [
    "public/xen/**/*.ts",
    "public/xen/**/*.tsx",
    "public/xen/js/core/.d.ts",
    "public/modules.d.ts"
  ]
}
